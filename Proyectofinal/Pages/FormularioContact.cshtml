@page
@model Proyectofinal.Pages.FormularioContactModel
@{
    ViewData["Title"] = "Formulario de Contacto";
}

<h2>Formulario de Contacto</h2>

<form method="post">
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" type="email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Asunto"></label>
        <input asp-for="Asunto" class="form-control" />
        <span asp-validation-for="Asunto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Mensaje"></label>
        <textarea asp-for="Mensaje" class="form-control"></textarea>
        <span asp-validation-for="Mensaje" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
